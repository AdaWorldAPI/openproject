<%=
  render(
    Primer::Alpha::Dialog.new(
      id: "create-work-package-outcome-dialog",
      title: I18n.t(:label_work_package_new),
      size: :xlarge
    )
  ) do |dialog|
    dialog.with_header(variant: :large)
    dialog.with_body do
      render(
        MeetingAgendaItems::Outcomes::CreateWorkPackageFormComponent.new(
          work_package:,
          project:,
          meeting:,
          meeting_agenda_item:
        )
      )
    end

    dialog.with_footer do
      component_collection do |modal_footer|
        modal_footer.with_component(
          Primer::Beta::Button.new(
            data: { "close-dialog-id": "create-work-package-outcome-dialog" }
          )
        ) do
          I18n.t(:button_cancel)
        end

        modal_footer.with_component(
          Primer::Beta::Button.new(
            scheme: :primary,
            form: "create-work-package-outcome-form",
            type: :submit
          )
        ) do
          I18n.t(:button_create)
        end
      end
    end
  end
%>
