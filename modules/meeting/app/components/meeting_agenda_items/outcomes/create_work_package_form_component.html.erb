<%=
  component_wrapper do
    primer_form_with(
      scope: :work_package,
      model: work_package,
      url: create_work_package_meeting_outcomes_path(meeting, meeting_agenda_item_id: meeting_agenda_item.id),
      method: :post,
      html: {
        id: "create-work-package-outcome-form"
      }
    ) do |f|
      flex_layout(mb: 3) do |modal_body|
        if work_package.errors[:base].present?
          modal_body.with_row do
            render(Primer::Alpha::Banner.new(mb: 3, icon: :stop, scheme: :danger)) { work_package.errors[:base].join("\n") }
          end
        end

        modal_body.with_row do
          render(WorkPackages::Dialogs::CreateForm.new(f, work_package:, wrapper_id: "#create-work-package-outcome-dialog"))
        end
      end
    end
  end
%>
