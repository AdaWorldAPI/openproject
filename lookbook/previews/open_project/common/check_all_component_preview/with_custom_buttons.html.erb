
<%=
  render(OpenProject::Common::CheckAllComponent.new(checkable_id: "checkable-example")) do |check_all|
    check_all.with_check_all_button(scheme: :invisible) do |button|
      button.with_leading_visual_icon(icon: :"check-circle")
      "Eat"
    end

    check_all.with_separator_content("")

    check_all.with_uncheck_all_button(scheme: :invisible) do |button|
      button.with_leading_visual_icon(icon: :"x-circle")
      "Don't eat"
    end
  end
%>

<section id="checkable-example" class="my-4">
  <%=
    render(
      Primer::Alpha::CheckBoxGroup.new(
        name: "my-ice-creams",
        label: "My favorite ice cream flavors",
        data: { controller: "checkable" }
      )
    ) do |group|
      group.check_box(
        label: "Vanilla",
        value: "vanilla",
        data: { checkable_target: "checkbox" }
      )
      group.check_box(
        label: "Chocolate",
        value: "chocolate",
        data: { checkable_target: "checkbox" }
      )
      group.check_box(
        label: "Strawberry",
        value: "strawberry",
        data: { checkable_target: "checkbox" }
      )
      group.check_box(
        label: "Cookie Dough",
        value: "cookie_dough",
        data: { checkable_target: "checkbox" }
      )
    end
  %>
</section>
